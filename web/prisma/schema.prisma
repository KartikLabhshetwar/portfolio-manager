generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stock {
  id        Int      @id @default(autoincrement())
  name      String
  quantity  Float
  buyPrice  Float
  createdAt DateTime @default(now())
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  portfolioId Int
}

model SharedLink {
  id         Int      @id @default(autoincrement())
  token      String?  @unique
  reportId   Int
  password   String?
  expiresAt  DateTime?
  maxViews   Int?
  views      Int      @default(0)
  portfolio   Portfolio? @relation("PortfolioToSharedLink", fields: [portfolioId], references: [id])
  portfolioId Int?
  createdAt  DateTime @default(now())
}

model Portfolio {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  stocks    Stock[]
  sharedLinks SharedLink[] @relation("PortfolioToSharedLink")
}
