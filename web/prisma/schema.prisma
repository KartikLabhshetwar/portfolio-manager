generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stock {
  id        Int      @id @default(autoincrement())
  name      String
  quantity  Float
  buyPrice  Float
  createdAt DateTime @default(now())
}

model SharedLink {
  id         Int      @id @default(autoincrement())
  token      String?  @unique
  reportId   Int
  password   String?
  expiresAt  DateTime?
  createdAt  DateTime @default(now())
}
